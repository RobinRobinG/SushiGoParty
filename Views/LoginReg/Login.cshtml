@model LoginUser;
@{
    ViewData["Title"] = "SushiGo Home Page";
}
<div class="row">
    <h1>Sushi Go Party!</h1>
    <p>To continue, please log in.</p>
    <div id= "login" class="col-md-4">
        <form asp-action="Login" asp-controller="LoginReg" method="POST">
            <div class="form-group">
                <label asp-for="LoginEmail" class="control-label"></label>
                <input asp-for="LoginEmail" class="form-control">
                <span asp-validation-for="LoginEmail"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginPassword" class="control-label"></label>
                <input asp-for="LoginPassword" class="form-control">
                <span asp-validation-for="LoginPassword"></span>
            </div>
            <input type="submit" />
        </form>
    </div>
</div>

<div class="row">
    <p>Don't have an account?</p>
    <a href ="/register" class="btn btn-success">Sign Up For An Account</a>
</div>